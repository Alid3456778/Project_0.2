<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Packages</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
        }
        .search-form {
            margin-bottom: 20px;
        }
        .search-form input {
            padding: 10px;
            width: calc(100% - 120px);
            margin-right: 10px;
            box-sizing: border-box;
        }
        .search-form button {
            padding: 10px;
            cursor: pointer;
        }
        .results {
            border-top: 1px solid #ccc;
            padding-top: 20px;
        }
        .result-item {
            border-bottom: 1px solid #eee;
            padding: 10px 0;
            position: relative;
        }
        .delete-button {
            position: absolute;
            right: 0;
            top: 0;
            background: #f44336;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
        .message {
            padding: 10px;
            background: #e0f7fa;
            border: 1px solid #b2ebf2;
            border-radius: 5px;
            color: #00796b;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Search Packages</h1>
        <div class="results">
            <!-- Display message if present -->
            <% if (message) { %>
                <div class="message"><%= message === 'deleted' ? 'Package deleted successfully.' : message %></div>
            <% } %>

            <!-- Results will be displayed here -->
            <% if (packages && packages.length > 0) { %>
                <% packages.forEach(function(item) { %>
                    <div class="result-item">
                        <h2><%= item.name %></h2>
                        <p><strong>Description:</strong> <%= item.description %></p>
                        <p><strong>Price:</strong> <%= item.price %></p>
                        <p><strong>Best Time to Visit:</strong> <%= item.best_time_to_vist %></p>
                        <p><strong>Top Attraction:</strong> <%= item.top_attraction %></p>
                        <p><strong>Activities:</strong> <%= item.activities %></p>
                        <p><strong>Local Dishes:</strong> <%= item.local_dishes %></p>
                        <p><strong>Language:</strong> <%= item.language %></p>
                        <p><strong>Currency:</strong> <%= item.currency %></p>
                        <img src="<%= item.image %>" alt="<%= item.name %>" style="width: 100px; height: auto;">
                        <form action="/delete" method="post" style="position: absolute; right: 0; top: 0;">
                            <input type="hidden" name="packagePrice" value="<%= item.price %>">
                            <button type="submit" class="delete-button">Delete</button>
                        </form>
                        
                    </div>
                <% }); %>
            <% } else { %>
                <p>No matching packages found.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
